<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" spacing="20" alignment="CENTER" prefWidth="600.0" prefHeight="600.0" fx:controller="com.example.foodapp.controller.MenuDetailController">
    <children>
        <Label fx:id="menuLabel" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
        <ListView fx:id="foodList" prefWidth="500.0" prefHeight="250.0" />
        <Label text="Add New Food Item" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <ImageView fx:id="foodImageView" fitWidth="120" fitHeight="120" preserveRatio="true" />
        <Button fx:id="chooseFoodImageBtn" text="Choose Image" />
        <TextField fx:id="foodNameField" promptText="Food Name" prefWidth="300.0" />
        <TextField fx:id="foodPriceField" promptText="Price (integer)" prefWidth="300.0" />
        <TextField fx:id="foodDescField" promptText="Description" prefWidth="300.0" />
        <TextField fx:id="foodSupplyField" promptText="Supply (integer)" prefWidth="300.0" />
        <TextField fx:id="foodKeywordsField" promptText="Keywords (comma separated)" prefWidth="300.0" />
        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button fx:id="addFoodBtn" text="Add Food" />
                <Button fx:id="backBtn" text="Back" />
            </children>
        </HBox>
        <Label fx:id="messageLabel" style="-fx-text-fill: #e74c3c;" />
    </children>
</VBox> 