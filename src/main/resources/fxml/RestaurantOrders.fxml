<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" spacing="20" alignment="CENTER" prefWidth="1200.0" prefHeight="700.0" fx:controller="com.example.foodapp.controller.RestaurantOrdersController">
    <children>
        <VBox spacing="10" alignment="TOP_CENTER" prefWidth="380.0">
            <children>
                <Label text="Pending Orders" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <ListView fx:id="pendingOrdersList" prefHeight="600.0" />
            </children>
        </VBox>
        <VBox spacing="10" alignment="TOP_CENTER" prefWidth="380.0">
            <children>
                <Label text="Accepted Orders" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <ListView fx:id="acceptedOrdersList" prefHeight="600.0" />
            </children>
        </VBox>
        <VBox spacing="10" alignment="TOP_CENTER" prefWidth="380.0">
            <children>
                <Label text="Served Orders" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <ListView fx:id="servedOrdersList" prefHeight="600.0" />
            </children>
        </VBox>
    </children>
</HBox> 