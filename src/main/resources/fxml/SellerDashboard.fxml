<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.foodapp.controller.SellerDashboardController" alignment="CENTER" spacing="30" style="-fx-background-color: #f8f9fa;">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40" />
    </padding>
    <children>
        <Label fx:id="welcomeLabel" />
        <Label fx:id="roleLabel" />
        <Button fx:id="profileBtn" text="View Profile" />
        <Button fx:id="logoutBtn" text="Logout" />
        <Button fx:id="addRestaurantBtn" text="Add Restaurant" />
        <Button fx:id="myRestaurantsBtn" text="My Restaurants" />
        <Button fx:id="restaurantListBtn" text="Restaurant List" />
        <Button fx:id="orderManagementBtn" text="Order Management" />
        <Button fx:id="simpleOrderViewerBtn" text="Simple Order Viewer" />
        <Button fx:id="salesAnalyticsBtn" text="Sales Analytics" style="-fx-background-color: #C2185B; -fx-text-fill: white; -fx-font-weight: bold;" />
        <VBox fx:id="roleContent" spacing="10" />
    </children>
</VBox> 