<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" spacing="20" alignment="CENTER" prefWidth="500.0" prefHeight="500.0" fx:controller="com.example.foodapp.controller.SelectAddressController">
    <children>
        <Label text="Select Delivery Address" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <ListView fx:id="addressList" prefWidth="400.0" prefHeight="180.0" />
        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button fx:id="selectBtn" text="Select" />
                <Button fx:id="backBtn" text="Back" />
            </children>
        </HBox>
        <Label text="Add New Address" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="titleField" promptText="Title (e.g. Home, Work)" prefWidth="300.0" />
        <TextField fx:id="addressField" promptText="Address" prefWidth="300.0" />
        <Button fx:id="addBtn" text="Add Address" />
        <Label fx:id="messageLabel" style="-fx-text-fill: #e74c3c;" />
    </children>
</VBox> 