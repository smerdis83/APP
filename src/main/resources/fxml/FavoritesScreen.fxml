<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" spacing="30" alignment="CENTER" prefWidth="1400.0" prefHeight="900.0" minWidth="1200.0" minHeight="800.0" fx:controller="com.example.foodapp.controller.FavoritesController">
    <children>
        <HBox spacing="40" alignment="CENTER">
            <children>
                <VBox spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #f8f8ff; -fx-border-color: #b0b0b0; -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-padding: 30;">
                    <children>
                        <Label text="❤️ Favorite Restaurants" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2a2a2a;" />
                        <ListView fx:id="favoriteList" prefHeight="600.0" prefWidth="450.0" minWidth="400.0" minHeight="500.0" />
                    </children>
                </VBox>
                <VBox spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #f8f8ff; -fx-border-color: #b0b0b0; -fx-border-width: 2; -fx-border-radius: 12; -fx-background-radius: 12; -fx-padding: 30;">
                    <children>
                        <Label text="🍽️ Other Restaurants" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2a2a2a;" />
                        <ListView fx:id="otherList" prefHeight="600.0" prefWidth="450.0" minWidth="400.0" minHeight="500.0" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button fx:id="backBtn" text="Back" />
            </children>
        </HBox>
        <Label fx:id="messageLabel" textFill="#e74c3c" />
    </children>
</VBox> 